@model IEnumerable<TramaWebApp.Models.Essay>
@using System.Security.Claims

<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                @if (User.IsSignedIn())
                {
                <h2 class="intro-text text-center">
                    Add an
                    <strong>Essay</strong>
                    <a asp-action="Create" class="btn btn-success">
                        <span class="glyphicon glyphicon-plus"></span>
                    </a>
                </h2>
                }
                else
                {
                    <h2 class="intro-text text-center">
                        Essay List
                    </h2>

                }
                <hr>
            </div>

@using (Html.BeginForm("index", null, FormMethod.Get))
{
    <div class="row">
        <div class="col-sm-8">
            <div class="input-group">
                <input type="text"
                       name="filter"
                       value="@ViewBag.filter"
                       class="form-control"
                       style="display: inline"
                       placeholder="Search" />
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">Go</button>
                </span>
            </div>
        </div>
    </div>

            <table class="table">
                <tr>
                    <th class="col-lg-2">
                        @Html.DisplayNameFor(model => model.EssayTitle)
                    </th>
                    
                    <th class="col-lg-2">
                        Book Title
                    </th>
                    <th class="col-lg-2">
                        Essay Author
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ThesisStatement)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EssayTitle)
                        </td>
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.book.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.student.StudentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ThesisStatement)
                        </td>
                        <td>
                            @if (User.IsSignedIn())
                            {
                                <div>
                                    <a asp-controller="Essays" asp-action="Edit" asp-route-id="@item.EssayId">Edit</a> |
                                    <a asp-controller="Essays" asp-action="Details" asp-route-id="@item.EssayId">Details</a> |
                                    <a asp-controller="Essays" asp-action="Delete" asp-route-id="@item.EssayId"><span class="glyphicon glyphicon-trash"></span></a>
                                </div>
                            }
                            else
                            {
                                <a asp-controller="Essays" asp-action="Details" asp-route-id="@item.EssayId">Details</a>

                            }
                        </td>
                    </tr>
                }
            </table>
}
            </div>
</div>
    </div>

@model TramaWebApp.Models.Essay


<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    Add an
                    <strong>Essay</strong>
                </h2>
                <hr>
            </div>

            <form asp-controller = "Essays" asp-action="Create" method="post">



                <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="form-group col-lg-6">
                        <label asp-for="student" class="control-label">Student</label>
                       @Html.DropDownList("SelectedStudent", "Select One") 
                        <span asp-validation-for="student" class="text-danger"></span>
                    </div>  

                    <div class="form-group col-lg-6">
                        <label asp-for="book" class="control-label">Book</label>
                        @Html.DropDownList("SelectedBook", "Select One") 
                        <span asp-validation-for="book" class="text-danger"></span>
                    </div>  
                    <div class="form-group col-lg-6">
                        <label asp-for="PublishingDate" class="control-label"></label>

                        <input asp-for="PublishingDate" class="form-control" />
                        <span asp-validation-for="PublishingDate" class="text-danger" />

                    </div>
                    
                    <div class="form-group col-lg-6">
                        <label asp-for="EssayTitle" class="control-label"></label>

                        <input asp-for="EssayTitle" class="form-control" />
                        <span asp-validation-for="EssayTitle" class="text-danger" />

                    </div>
                    <div class="form-group col-lg-12">
                        <label asp-for="ThesisStatement" class="control-label"></label>

                        <textarea asp-for="ThesisStatement" class="form-control" ></textarea>
                        <span asp-validation-for="ThesisStatement" class="text-danger" />

                    </div>
                    <div class="form-group col-lg-12">
                        <label asp-for="Content" class="control-label"></label>

                        <textarea asp-for="Content" class="form-control" ></textarea>
                        <span asp-validation-for="Content" class="text-danger" />

                    </div>
                    <div class="form-group col-lg-12">
                        <label asp-for="Conclusion" class="control-label"></label>

                        <textarea asp-for="Conclusion" class="form-control" ></textarea>
                        <span asp-validation-for="Conclusion" class="text-danger" />

                    </div>
                    
                    <div class="clearfix"></div>
                    <div class="form-group col-lg-12">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>

            </form>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}



@model IEnumerable<TramaWebApp.Models.Book>
@using System.Security.Claims

<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                @if (User.IsSignedIn())
                {
                    <h2 class="intro-text text-center">
                        Add a
                        <strong>Book</strong>
                        <a class="btn btn-success" data-modal="" href="/books/create" id="btnCreate">
                            <span class="glyphicon glyphicon-plus"></span>
                        </a>
                    </h2>
                }
                else
                {
                    <h2 class="intro-text text-center">
                        The Book List
                    </h2>
                }
                <hr>
            </div>

            @using (Html.BeginForm("index", null, FormMethod.Get))
            {
                <div class="row">
                    <div class="col-sm-8">
                        <div class="input-group">
                            <input type="text"
                                   name="filter"
                                   value="@ViewBag.filter"
                                   class="form-control"
                                   style="display: inline"
                                   placeholder="Search" />
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="submit">Go</button>
                            </span>
                        </div>
                    </div>
                </div>


                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Author)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Image)
                        </th>

                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Author)
                            </td>
                            <td>
                                <img src="@Url.Content(item.Image)" alt="@item.Title" class="img-rounded" style="margin-bottom:7px; height:150px" />
                            </td>
                            <td>
                                @if (User.IsSignedIn())
                                {
                                    <div>
                                        <a asp-controller="Books" asp-action="Edit" asp-route-id="@item.BookId">Edit</a> |
                                        <a asp-controller="Books" asp-action="Details" asp-route-id="@item.BookId">Details</a> |
                                        <a asp-controller="Books" asp-action="Delete" asp-route-id="@item.BookId"><span class="glyphicon glyphicon-trash"></span></a>
                                    </div>
                                }
                                else
                                {
                                    <a asp-controller="Books" asp-action="Details" asp-route-id="@item.BookId">Details</a>

                                }
                            </td>
                        </tr>
                    }
                </table>

            }
        </div>
    </div>
</div>

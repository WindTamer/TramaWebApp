                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                 <div class="row">
                    <div class="form-group col-lg-4">
                        @Html.LabelFor(m => m.Name, new { @class = "col-lg-4 control-label" })
                       
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Name)
                        
                    </div>
                    <div class="form-group col-lg-4">
                        @Html.LabelFor(m => m.From, new { @class = "col-lg-4 control-label" })
                        
                            @Html.TextBoxFor(m => m.From, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.From)
                        
                    </div>
                    <div class="form-group col-lg-4">
                        @Html.LabelFor(m => m.Phone, new { @class = "col-lg-4 control-label" })
                        
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Phone)
                        
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group col-lg-12">
                        @Html.LabelFor(m => m.Body, new { @class = "col-lg-4 control-label" })
                        
                            @Html.TextAreaFor(m => m.Body, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Body)
                        
                    </div>
                    
                    <div class="form-group col-lg-12">                        
                            <input type="submit" class="btn btn-default" value="Send" />                       
                    </div>
                    </div>
                }

                <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
                <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>


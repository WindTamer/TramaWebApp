@model IEnumerable<TramaWebApp.Models.Student>
@using System.Security.Claims

<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                @if (User.IsSignedIn())
                {
                    <h2 class="intro-text text-center">
                        Add a
                        <strong>Student</strong>
                        <a asp-action="Create" class="btn btn-success">
                            <span class="glyphicon glyphicon-plus"></span>
                        </a>
                    </h2>
                }
                else
                {
                    <h2 class="intro-text text-center">
                        Student List
                    </h2>
                }
                <hr>
            </div>

            @using (Html.BeginForm("index", null, FormMethod.Get))
            {
                <div class="row">
                    <div class="col-sm-8">
                        <div class="input-group">
                            <input type="text"
                                   name="filter"
                                   value="@ViewBag.filter"
                                   class="form-control"
                                   style="display: inline"
                                   placeholder="Search" />
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="submit">Go</button>
                            </span>
                        </div>
                    </div>
                </div>

                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.StudentName)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentName)
                            </td>
                            <td>
                                @if (User.IsSignedIn())
                                {
                                    <div>
                                        <a asp-controller="Students" asp-action="Edit" asp-route-id="@item.StudentId">Edit</a> |
                                        <a asp-controller="Students" asp-action="Details" asp-route-id="@item.StudentId">Details</a> |
                                        <a asp-controller="Students" asp-action="Delete" asp-route-id="@item.StudentId"><span class="glyphicon glyphicon-trash"></span></a>
                                    </div>
                                }
                                else
                                {
                                    <a asp-controller="Students" asp-action="Details" asp-route-id="@item.StudentId">Details</a>

                                }
                            </td>
                        </tr>
                    }
                </table>
            }
        </div>
    </div>
</div>
